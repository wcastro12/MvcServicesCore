@model SelectEnum.Models.GuestParty

@{
    ViewData["Title"] = "GuestFrom";
}

<h2>GuestFrom</h2>

<h4>GuestParty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GuestFrom" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="willAttnd" class="control-label"></label>
                <select asp-for="willAttnd" class="form-control">

                    <option value="0">Select value</option>
                    <option value="True">Yes, Guest join </option>
                    <option value="False">Not, sorry</option>
                </select>

                <span asp-validation-for="willAttnd" class="text-danger"></span>
            </div>
